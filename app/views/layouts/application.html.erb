<!DOCTYPE html>
<html>
<head>
  <title>Buzzme</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="<%=asset_path 'bee.png'%>">
</head>

  <body id="page-top" class="index">
  <p class="notice alert-success"><%= notice %></p>
  <p class="alert alert-danger"><%= alert %></p>

  <!-- Navigation -->
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header page-scroll">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/", class="headerwords">BUZZME<img class="beepng", src="<%=asset_path 'bee.png'%>" alt=""></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li class="hidden">
            <a href="#page-top"></a>
          </li>
          <li class="page-scroll">
            <% if current_client %>
              <%= link_to "Log Out", destroy_client_session_path, method: :delete %>
            <% else %>
              <%= link_to "Log In", new_client_session_path %>
            <% end %>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>

  <%= yield %>

</body>
</html>
