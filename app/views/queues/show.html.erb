<div>
  <h3 class="average-wait-time"><%= @average_wait_time %></h3>
  Average time per customer
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>
        Queue for <%= current_client.email %>
    </h1>

    <div class="new-customers">
      <%= form_for @customer, remote: true do |form| %>
      <i class="img-font fa fa-user-plus fa-4x"></i>
        <%= form.text_field :name, class: "new-name-field", placeholder: 'Name'  %><br />
      <i class="img-font fa fa-phone fa-4x"></i>
        <%= form.text_field :phone_number, class: "new-phone-number-field", placeholder: 'Phone' %><br />
        <%= form.submit "Add to line", class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="existing-customers">
      <% @queue.each do |customer| %>
        <%= render partial: 'customers/buzz_form', locals: {customer: customer}%>
      <% end %>
    </div>

  </div>
</div>
